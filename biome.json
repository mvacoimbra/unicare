{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noRedeclare": "off",
				"noConfusingVoidType": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			},
			"correctness": {
				"noUnsafeOptionalChaining": "off",
				"noUnusedImports": "warn"
			}
		}
	},
	"vcs": {
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			"**/*.js",
			"**/*.cjs",
			"**/tsconfig.*.json",
			"node_modules/**",
			"*.js",
			".vscode",
			"./app/main.tsx"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "space"
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded"
		}
	}
}
